{
  "title": "Custom key-binding in Vivaldi",
  "rules": [
    {
      "description": "Custom key-binding in Vivaldi",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.vivaldi\\.Vivaldi"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["left_control"] }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.vivaldi\\.Vivaldi"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["left_control"] }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    }
  ]
}
