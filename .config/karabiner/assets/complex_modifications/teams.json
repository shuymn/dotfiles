{
  "title": "Custom key-binding in Microsoft Teams",
  "rules": [
    {
      "description": "Custom key-binding in Microsoft Teams",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.microsoft\\.teams"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": ["^com\\.microsoft\\.teams"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "return_or_enter",
            "modifiers": ["command"]
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    }
  ]
}
