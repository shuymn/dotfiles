! ------------------------------------------------------------
! 基本的な設定っぽい？
! ------------------------------------------------------------
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: full
Xft.hintstyle: hintslight
Xft.rgba: rgb

! ------------------------------------------------------------
! 起動時のサイズ
! ------------------------------------------------------------
URxvt.geometry: 110x35

! ------------------------------------------------------------
! font
! ------------------------------------------------------------
URxvt*font: xft:Ricty for Powerline:size=11:antialias=true

! ------------------------------------------------------------
! scrollbar
! ------------------------------------------------------------
URxvt.scrollBar: false

! ------------------------------------------------------------
! Color settings
! ------------------------------------------------------------

URxvt.depth: 32

! background color
URxvt.background: [85]#111

! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! vim: ft=xdefaults
 
 *foreground: #C5C8C6
 ! black
 *color0: #282A2E
 *color8: #373B41
 ! red
 *color1: #A54242
 *color9: #CC6666
 ! green
 *color2: #8C9440
 *color10: #B5BD68
 ! yellow
 *color3: #DE935F
 *color11: #F0C674
 ! blue
 *color4: #5F819D
 *color12: #81A2BE
 ! magenta
 *color5: #85678F
 *color13: #B294BB
 ! cyan
 *color6: #5E8D87
 *color14: #8ABEB7
 ! white
 *color7: #707880
 *color15: #C5C8C6
! ------------------------------------------------------------
! urxvt extensions
! ------------------------------------------------------------
URxvt.perl-ext-common: default,matcher,tabbedex

! enable clickable links
URxvt.urlLauncher: /usr/bin/chromium
URxvt.matcher.button: 1

! tabbedex setting
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 2
URxvt.tabbed.tab-bg: 8
URxvt.tabbed.autohide: yes
URxvt.tabbed.new-button: no
URxvt.tabbed.title: no

! ------------------------------------------------------------
! saveline setting
! ------------------------------------------------------------
URxvt*saveLines: 10000

! ------------------------------------------------------------
! allow bold
! ------------------------------------------------------------
urxvt*allow_bold: true

URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot
